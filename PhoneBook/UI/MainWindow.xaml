<Window x:Class="PhoneBook.UI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:PhoneBook.UI"
		mc:Ignorable="d" WindowStartupLocation="CenterScreen"
		Title="Phone Book" Height="350" Width="750"
		MinHeight="300" MinWidth="400" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <local:InverseBoolConverter x:Key="InverseBoolConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" HorizontalAlignment="Center">
			Filtering goes here.
        </TextBlock>

        <DockPanel x:Name="entriesPanel" Grid.Column="1"
				   HorizontalAlignment="Stretch"
				   VerticalAlignment="Stretch">
            <DockPanel DockPanel.Dock="Top" Margin="10,0">
                <Button x:Name="previousPage" DockPanel.Dock="Left"
						IsEnabled="{Binding Path=IsFirstPage,
							Converter={StaticResource
								ResourceKey=InverseBoolConverter}}"
						Click="previousPage_Click">
                    &lt;
                </Button>
                <Button x:Name="nextPage" DockPanel.Dock="Right"
						IsEnabled="{Binding Path=IsLastPage,
							Converter={StaticResource
								ResourceKey=InverseBoolConverter}}"
						Click="nextPage_Click">
                    &gt;
                </Button>
                <StackPanel HorizontalAlignment="Center"
							Orientation="Horizontal">
                    <TextBlock Text="Page " />
                    <TextBlock Text="{Binding Path=CurrentPage}" />
                    <TextBlock Text="/" />
                    <TextBlock Text="{Binding Path=TotalPages}" />
                </StackPanel>
            </DockPanel>
            <TabControl x:Name="entriesTabControl" Margin="10"
						SelectionChanged="TabControl_SelectionChanged">
                <TabItem x:Name="peopleTabItem" Header="People">
                    <ListBox x:Name="peopleListBox" Margin="10"
							BorderBrush="Black" BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=FullName}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem x:Name="companiesTabItem" Header="Companies">
                    <ListBox x:Name="companiesListBox" Margin="10"
							 BorderBrush="Black" BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>
        </DockPanel>

        <StackPanel x:Name="individualInfoPanel" Grid.Column="2"
				   HorizontalAlignment="Stretch"
				   VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal"
							HorizontalAlignment="Center">
                <Button Click="updateButton_Click" Content="Update"/>
                <Button Click="deleteButton_Click" Content="Delete"/>
            </StackPanel>

            <!--
            <ListBox x:Name="propertiesListBox" HorizontalAlignment="Center"
					  ItemsSource="{Binding SelectedItem, ElementName=peopleListBox}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="2">
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"  Height="Auto"
                                       Text="FullName"/>
                            <TextBox x:Name="FullNameTextBox"
                                     Grid.Column="1" Height="Auto"
                                     Text="{Binding FullName}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            -->

            <Grid x:Name="peopleInfoGrid" HorizontalAlignment="Center"
					  DataContext="{Binding SelectedItem, ElementName=peopleListBox}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"><Run Text="First name:"/></TextBlock>
                <TextBox x:Name="firstNameTextBox" Grid.Column="1" Grid.Row="0"
							 Text="{Binding FirstName}"/>

                <TextBlock Grid.Column="0" Grid.Row="1"><Run Text="Middle name:"/></TextBlock>
                <TextBox x:Name="middleNameTextBox" Grid.Column="1" Grid.Row="1"
							 Text="{Binding MiddleName}"/>

                <TextBlock Grid.Column="0" Grid.Row="2"><Run Text="Last name:"/></TextBlock>
                <TextBox x:Name="lastNameTextBox" Grid.Column="1" Grid.Row="2"
							 Text="{Binding LastName}"/>

                <TextBlock Grid.Column="0" Grid.Row="3"><Run Text="Address:"/></TextBlock>
                <TextBox x:Name="addressTextBox" Grid.Column="1" Grid.Row="3"
							 Text="{Binding AddressId}"/>

                <TextBlock Grid.Column="0" Grid.Row="4"><Run Text="Number:"/></TextBlock>
                <TextBox x:Name="personPhoneNumbersTextBox" Grid.Column="1" Grid.Row="4"
							 Text="{Binding Phones}"/>
            </Grid>

            <!--
            <Grid x:Name="companiesInfoGrid" HorizontalAlignment="Center"
					  DataContext="{Binding SelectedItem, ElementName=companiesListBox}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"><Run Text="Name:"/></TextBlock>
                <TextBox x:Name="nameTextBox" Grid.Column="1" Grid.Row="0"
							 Text="{Binding Name}"/>

                <TextBlock Grid.Column="0" Grid.Row="1"><Run Text="Description:"/></TextBlock>
                <TextBox x:Name="descriptionTextBox" Grid.Column="1" Grid.Row="1"
							 Text="{Binding Description}"/>

                <TextBlock Grid.Column="0" Grid.Row="2"><Run Text="Email:"/></TextBlock>
                <TextBox x:Name="emailTextBox" Grid.Column="1" Grid.Row="2"
							 Text="{Binding Email}"/>

                <TextBlock Grid.Column="0" Grid.Row="3"><Run Text="Rating:"/></TextBlock>
                <TextBox x:Name="ratingTextBox" Grid.Column="1" Grid.Row="3"
							 Text="{Binding Rating}"/>

                <TextBlock Grid.Column="0" Grid.Row="4"><Run Text="Number:"/></TextBlock>
                <TextBox x:Name="companyPhoneNumbersTextBox" Grid.Column="1" Grid.Row="4"
							 Text="{Binding Phones}"/>
            </Grid>
            -->

        </StackPanel>

    </Grid>
</Window>